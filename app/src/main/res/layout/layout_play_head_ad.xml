<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="#073A6C"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="7px"
        android:layout_marginBottom="7px"
        android:background="#0172AE" />

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="99px"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/left11" />

    <com.pjj.xsp.view.custom.ScreenLeftView
        android:id="@+id/screen_left"
        android:layout_width="99px"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_bianmin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14px"
        android:layout_marginRight="39px"
        android:ems="1"
        android:text="便民信息"
        android:textColor="@color/white"
        android:textSize="32px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_person"
        android:layout_marginLeft="17px"
        android:layout_marginTop="7px"
        android:layout_marginRight="40px"
        android:layout_toRightOf="@+id/tv_bianmin_name">

        <TextView
            android:id="@+id/tv_bianmin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLength="60"
            android:text=""
            android:textColor="@color/white"
            android:textSize="31px" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30px"
        android:layout_marginBottom="16px"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ad_person_name"
            android:layout_width="144px"
            android:layout_height="38px"
            android:layout_gravity="center_vertical"
            android:layout_margin="2px"
            android:background="@color/color_2c86c6"
            android:gravity="center"
            android:text="发布者"
            android:textColor="@color/white"
            android:textSize="24px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ad_person"
            android:layout_width="376px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="@color/color_2c86c6"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_ad_phone_name"
            android:layout_width="141px"
            android:layout_height="38px"
            android:layout_gravity="center_vertical"
            android:layout_margin="2px"
            android:background="@color/color_2c86c6"
            android:gravity="center"
            android:text="电话"
            android:textColor="@color/white"
            android:textSize="25px"
            android:textStyle="bold" />
        <!--268 39-->
        <TextView
            android:id="@+id/tv_ad_phone"
            android:layout_width="307px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="38px"
            android:text="暂无"
            android:textColor="@color/color_2c86c6"
            android:textSize="25px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="55px"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/right11"
        android:scaleType="fitXY" />

    <com.pjj.xsp.view.custom.ScreenRightView
        android:id="@+id/screen_right"
        android:layout_width="55px"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
